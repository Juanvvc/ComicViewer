<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.juanvvc.comicviewer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="15" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:debuggable="true" android:hardwareAccelerated="true">
        <activity
            android:name=".ComicViewerActivity"
            android:label="@string/app_name" android:screenOrientation="landscape">

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="file:" android:pathPattern=".*\\.cbr" android:host="*"/>
                <data android:scheme="file:" android:pathPattern=".*\\.cbz" android:host="*"/>
            </intent-filter>
        </activity>
<!--         <activity android:name=".FileExplorer" android:label="@string/app_name"> -->

<!--         </activity> -->
        <activity android:name=".GalleryExplorer" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>