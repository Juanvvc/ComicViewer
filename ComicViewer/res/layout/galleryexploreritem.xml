<?xml version="1.0" encoding="utf-8"?>
<!-- Layout of a cover item: it shows the cover and the comic name
This layout is used in the GalleryExplorer activity -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/coveritem_img"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
			android:layout_marginTop="0dip"
            android:src="@drawable/loading_cover"
            android:contentDescription="@string/cover"
            />

        <TextView
            android:id="@+id/coveritem_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/coveritem_img"
            android:layout_below="@+id/coveritem_img"
            android:text="@string/nodata" />
        
        <!--
        I couldn't find a better way to pass information from this item to the main activity than a hidden field.
        The absolute path of the comic in the filesystem
        -->
        <TextView
            android:id="@+id/coveritem_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/coveritem_img"
            android:layout_below="@+id/coveritem_text"
            android:text="@string/nodata"
            android:visibility="gone" />

    </RelativeLayout>
